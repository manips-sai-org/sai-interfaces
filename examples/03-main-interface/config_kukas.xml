<simvizConfiguration>
	<worldFilePath>resources/urdf/world_files/world_kukas.urdf</worldFilePath>

	<simParameters>
		<timestep>0.001</timestep>
		<enableJointLimits>true</enableJointLimits>
		<coeffFriction>0.5</coeffFriction>
		<collisionRestitution>0.0</collisionRestitution>
	</simParameters>

	<logger>
		<logFolderName>logs_simviz_kukas</logFolderName>
	</logger>

	<forceSensor>
		<robotName>Kuka1</robotName>
		<linkName>end-effector</linkName>
		<origin xyz="0 0 0" rpy="0 0 0" />
		<filterCutoff>15.0</filterCutoff>
	</forceSensor>

	<forceSensor>
		<robotName>Kuka2</robotName>
		<linkName>end-effector</linkName>
		<origin xyz="0 0 0" rpy="0 0 0" />
		<filterCutoff>15.0</filterCutoff>
	</forceSensor>

</simvizConfiguration>

<robotControlConfiguration robotName="Kuka1">
	<robotModelFile>resources/urdf/robot_models/iiwa7/kuka_iiwa.urdf</robotModelFile>
	<baseFrame xyz="0 0 0" rpy="0 0 0" />
	<worldGravity xyz="0 0 -9.81" />

	<timestep>0.001</timestep>

	<logger>
		<logFolderName>logs_controllers_kukas</logFolderName>
	</logger>

	<controller name="joint_controller">
		<task name="joint_task" type="joint_task">
			<useDynamicDecoupling>true</useDynamicDecoupling>
			<otg type="disabled"/>
		</task>
	</controller>

	<controller name="cartesian_controller">
		<task name="cartesian_task" type="motion_force_task">
			<linkName>end-effector</linkName>
			<velocitySaturation enabled="true" linear_velocity_limit="0.25" angular_velocity_limit="0.78" />
			<otg type="disabled"/>
		</task>

		<task name="joint_task" type="joint_task">
			<otg type="disabled" />
		</task>
	</controller>

</robotControlConfiguration>

<robotControlConfiguration robotName="Kuka2">
	<robotModelFile>resources/urdf/robot_models/iiwa7/kuka_iiwa.urdf</robotModelFile>
	<baseFrame xyz="0 0 0" rpy="0 0 0" />
	<worldGravity xyz="0 0 -9.81" />

	<timestep>0.001</timestep>

	<controller name="joint_controller">
		<task name="joint_task" type="joint_task">
			<useDynamicDecoupling>true</useDynamicDecoupling>
			<otg type="disabled"/>
		</task>
	</controller>
</robotControlConfiguration>